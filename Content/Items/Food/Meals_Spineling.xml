<?xml version="1.0" encoding="utf-8"?>
<Override>
  <Items>
    <!-- MEAT -->
    <!--Spineling-->
    <Item HideInMenus="false" name="Kebab" identifier="he-cookedspinelingkebab" variantof="he-poisoneffectpreset_fork" health="100" category="Misc" subcategory="Food" maxstacksize="1" maxstacksizecharacterinventory="1" cargocontaineridentifier="metalcrate" description="" Tags="smallitem,fooditem,petfood1,petfood2,petfood3" spritecolor="140,86,38,255" inventoryiconcolor="140,86,38,255" containercolor="140,86,38,255" useinhealthinterface="true" scale="0.5" impactsoundtag="impact_softitem" isshootable="True" requireaimtouse="True">
      <PreferredContainer secondary="abandonedmedcab" spawnprobability="0.02" />
      <PreferredContainer secondary="abandonedcrewcab" minamount="0" maxamount="1" spawnprobability="0.02" />
      <PreferredContainer secondary="crewcab" amount="1" spawnprobability="0.0" notcampaign="True"/>
      <PreferredContainer primary="table" secondary="kitchen,crewcab"/>
      <Sprite texture="%ModDir:2954998725%/Content/Items/Food/FoodAndMeat.png" sourcerect="364,1,99,25" depth="0.6" origin="0.5,0.5" />
      <Fabricate suitablefabricators="cuttingboard" requiredtime="15" requiresrecipe="false" amount="1" displayname="spinelingfooditem">
        <RequiredSkill identifier="cooking" level="25" />
        <RequiredItem identifier="he-spinelingslices" amount="1" MinCondition="0.5" MaxCondition="1.0" UseCondition="False" />
        <RequiredItem identifier="spinelingspikeloot" amount="1" />
      </Fabricate>
      <Deconstruct time="1" requireddeconstructor="deconstructor"/>
      <Body width="61" radius="18" density="12" />
      <SuitableTreatment type="hunger" suitability="95" />
      <Holdable canbepicked="true" canBeCombined="false" removeOnCombined="false" slots="Any,RightHand,LeftHand" handle1="-40,5" aimpos="30,2" holdangle="70" holdpos="-10,-36" aimangle="120" aimable="false" swingwhenaiming="true" swingamount="10,6" swingspeed="0.2" msg="ItemMsgPickUpSelect">
        <!-- EVERYTHING RELATED TO POISONING FOOD IS HANDLED VIA THE POISON EFFECT PRESET ITEMS DEFINED IN - variantof="" AND THEIR CODE IS LOCATED IN - "/Content/Items/#Presets/#ItemPresets.xml" -->

        <!--////////// HEALTH MENU USAGE [BOT] \\\\\\\\\\-->
        <!-- allows health menu usage on bots as long as they are not in water -->
        <StatusEffect type="OnSuccess" target="This,UseTarget" condition="-20" disabledeltatime="true" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="false" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="false" />
          <Affliction identifier="he-increasedmeleedamage" amount="18.0" />
          <Affliction identifier="he-increasedspeed" amount="18.0" />
          <Affliction identifier="he-increasedspeed" amount="18.0" />
          <Affliction identifier="he-stuffed" amount="5.4" />
          <ReduceAffliction type="damage" amount="1.0" />
          <ReduceAffliction type="burn" amount="0.5" />
          <Sound file="%ModDir:2954998725%/Content/Sounds/Items/Drinks/Swallow1.ogg" volume="8.0" range="300" loop="false" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="false" />
          <Conditional trait_likes_burgers="gt 0" />
          <ReduceAffliction identifier="mood" amount="2.0" />
        </StatusEffect>
        
        <!--////////// HEALTH MENU USAGE [PLAYER] \\\\\\\\\\-->
        <!-- only allows health menu usage for players who are not in water and are unconcious/stunned -->
        <StatusEffect type="OnSuccess" target="This,UseTarget" condition="-20" disabledeltatime="true" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="true" />
          <Conditional stun="gt 0" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="true" />
          <Conditional stun="gt 0" />
          <Affliction identifier="he-increasedmeleedamage" amount="18.0" />
          <Affliction identifier="he-increasedspeed" amount="18.0" />
          <Affliction identifier="he-increasedspeed" amount="18.0" />
          <Affliction identifier="he-stuffed" amount="5.4" />
          <ReduceAffliction type="damage" amount="1.0" />
          <ReduceAffliction type="burn" amount="0.5" />
          <Sound file="%ModDir:2954998725%/Content/Sounds/Items/Drinks/Swallow1.ogg" volume="8.0" range="300" loop="false" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="true" />
          <Conditional stun="gt 0" />
          <Conditional trait_likes_burgers="gt 0" />
          <ReduceAffliction identifier="mood" amount="2.0" />
        </StatusEffect>

        <!--////////// REGULAR EATING \\\\\\\\\\-->
        <StatusEffect type="OnUse" target="This" Condition="-4.0">
          <Conditional InWater="false" />
        </StatusEffect>
        <StatusEffect type="OnUse" target="Character" comparison="And">
          <Conditional InWater="false" />
          <Affliction identifier="he-increasedmeleedamage" amount="18.0" />
          <Affliction identifier="he-increasedspeed" amount="18.0" />
          <Affliction identifier="he-increasedspeed" amount="18.0" />
          <Affliction identifier="he-stuffed" amount="5.4" />
          <ReduceAffliction type="damage" amount="1.0" />
          <ReduceAffliction type="burn" amount="0.5" />
          <Affliction identifier="spill" amount="1000" probability="0.0005" />
          <Sound file="%ModDir:2954998725%/Content/Sounds/Items/Food/EatingSoft.ogg" loop="True" range="200" volume="5.0" />
        </StatusEffect>
        <StatusEffect type="OnUse" target="Character" comparison="And">
          <Conditional InWater="false" />
          <Conditional hunger="gt 0.5" />
          <ReduceAffliction type="hunger" amount="0.5" />
        </StatusEffect>
        <StatusEffect type="OnUse" target="Character" comparison="And">
          <Conditional InWater="false" />
          <Conditional trait_likes_filets="gt 0" />
          <ReduceAffliction identifier="mood" amount="2.0" />
        </StatusEffect>
        <StatusEffect type="OnBroken" target="This">
          <Remove />
        </StatusEffect>
      </Holdable>
      <AiTarget sightrange="1000" static="true" />
    </Item>

  </Items>
</Override>