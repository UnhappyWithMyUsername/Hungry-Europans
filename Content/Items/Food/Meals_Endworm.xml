<?xml version="1.0" encoding="utf-8"?>
<Override>
  <Items>
    <!-- MEAT -->
    <!--Endworm-->
    <Item hideinmenus="false" name="Hotdog" identifier="he-endwormhotdog" variantof="he-poisoneffectpreset_regular" health="100" category="Misc" subcategory="Food - Endworm" maxstacksize="1" maxstacksizecharacterinventory="1" cargocontaineridentifier="metalcrate" description="" Tags="smallitem,fooditem,fingerfood,petfood1,petfood2,petfood3" useinhealthinterface="true" scale="0.4" impactsoundtag="impact_softitem" isshootable="True" requireaimtouse="True">
      <PreferredContainer secondary="wreckmedcab,abandonedmedcab" amount="1" spawnprobability="0.01" />
      <PreferredContainer secondary="abandonedcrewcab" minamount="1" maxamount="1" spawnprobability="0.01" />
      <PreferredContainer secondary="crewcab" amount="1" spawnprobability="0.02" notcampaign="True"/>
      <PreferredContainer primary="table" secondary="kitchen,crewcab"/>
      <Fabricate suitablefabricators="cuttingboard" requiredtime="10" requiresrecipe="false" amount="1">
        <RequiredSkill identifier="cooking" level="20" />
        <RequiredItem identifier="he-endwormsausage" amount="1" />
        <RequiredItem identifier="he-ketchup" UseCondition="True" MinCondition="0.125"/>
        <RequiredItem identifier="he-hotdogbun" amount="1"/>
      </Fabricate>
      <Deconstruct time="1" requireddeconstructor="deconstructor"/>
      <Sprite texture="%ModDir:2954998725%/Content/Items/Food/FoodAndMeat.png" sourcerect="139,489,67,23" depth="0.6" origin="0.5,0.5" />
      <Body width="67" radius="11" density="15" />
      <SuitableTreatment type="hunger" suitability="60" />
      <Holdable canbepicked="true" canBeCombined="false" removeOnCombined="false" slots="Any,RightHand,LeftHand" aimpos="25,16" holdangle="0" holdpos="36,-20" aimangle="0" aimable="false" swingwhenaiming="true" swingamount="10,6" swingspeed="0.2" msg="ItemMsgPickUpSelect">
        <!-- EVERYTHING RELATED TO POISONING FOOD IS HANDLED VIA THE POISON EFFECT PRESET ITEMS DEFINED IN - variantof="" AND THEIR CODE IS LOCATED IN - "/Content/Items/#Presets/#ItemPresets.xml" -->

        <!--////////// HEALTH MENU USAGE [BOT] \\\\\\\\\\-->
        <!-- allows health menu usage on bots as long as they are not in water -->
        <StatusEffect type="OnSuccess" target="This,UseTarget" condition="-20" disabledeltatime="true" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="false" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="false" />
          <Affliction identifier="he-pressureresistance" amount="64.0" />
          <Affliction identifier="psychosis" amount="12" />
          <Affliction identifier="hallucinating" amount="12" />
          <Affliction identifier="he-stuffed" amount="45.0" />
          <ReduceAffliction type="damage" amount="12" />
          <ReduceAffliction type="burn" amount="4.0" />
          <ReduceAffliction type="hunger" amount="2" />
          <ReduceAffliction identifier="he-starvation" amount="40" />
          <Sound file="%ModDir:2954998725%/Content/Sounds/Items/Drinks/Swallow1.ogg" volume="8.0" range="300" loop="false" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="false" />
          <Conditional trait_likes_hotdogs="gt 0" />
          <ReduceAffliction identifier="mood" amount="2.0" />
        </StatusEffect>

        <!--////////// HEALTH MENU USAGE [PLAYER] \\\\\\\\\\-->
        <!-- only allows health menu usage for players who are not in water and are unconcious/stunned -->
        <StatusEffect type="OnSuccess" target="This,UseTarget" condition="-20" disabledeltatime="true" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="true" />
          <Conditional stun="gt 0" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="true" />
          <Conditional stun="gt 0" />
          <Affliction identifier="he-pressureresistance" amount="64.0" />
          <Affliction identifier="psychosis" amount="12" />
          <Affliction identifier="hallucinating" amount="12" />
          <Affliction identifier="he-stuffed" amount="45.0" />
          <ReduceAffliction type="damage" amount="12" />
          <ReduceAffliction type="burn" amount="4.0" />
          <ReduceAffliction type="hunger" amount="2" />
          <ReduceAffliction identifier="he-starvation" amount="40" />
          <Sound file="%ModDir:2954998725%/Content/Sounds/Items/Drinks/Swallow1.ogg" volume="8.0" range="300" loop="false" />
        </StatusEffect>
        <StatusEffect type="OnSuccess" target="This,UseTarget" duration="5" comparison="And">
          <Conditional InWater="false" />
          <Conditional IsPlayer="true" />
          <Conditional stun="gt 0" />
          <Conditional trait_likes_hotdogs="gt 0" />
          <ReduceAffliction identifier="mood" amount="2.0" />
        </StatusEffect>

        <!--////////// REGULAR EATING \\\\\\\\\\-->
        <StatusEffect type="OnUse" target="This" Condition="-4.0">
          <Conditional InWater="false" />
        </StatusEffect>
        <StatusEffect type="OnUse" target="Character" comparison="And">
          <Conditional InWater="false" />
          <Affliction identifier="he-pressureresistance" amount="64.0" />
          <Affliction identifier="psychosis" amount="12" />
          <Affliction identifier="hallucinating" amount="12" />
          <Affliction identifier="he-stuffed" amount="45.0" />
          <ReduceAffliction type="damage" amount="12" />
          <ReduceAffliction type="burn" amount="4.0" />
          <ReduceAffliction type="hunger" amount="2" />
          <ReduceAffliction identifier="he-starvation" amount="40" />
          <Affliction identifier="spill" amount="1000" probability="0.0005" />
          <Sound file="%ModDir:2954998725%/Content/Sounds/Items/Food/EatingSoft.ogg" loop="True" range="200" volume="5.0" />
        </StatusEffect>
        <StatusEffect type="OnUse" target="Character" comparison="And">
          <Conditional InWater="false" />
          <Conditional hunger="gt 0.5" />
          <ReduceAffliction type="hunger" amount="0.5" />
        </StatusEffect>
        <StatusEffect type="OnUse" target="Character" comparison="And">
          <Conditional InWater="false" />
          <Conditional trait_likes_hotdogs="gt 0" />
          <ReduceAffliction identifier="mood" amount="2.0" />
        </StatusEffect>
        <StatusEffect type="OnBroken" target="This">
          <Remove />
        </StatusEffect>
      </Holdable>
      <AiTarget sightrange="1000" static="true" />
    </Item>
  </Items>
</Override>