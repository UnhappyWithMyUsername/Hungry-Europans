    <Affliction
      identifier="he-hunger"
      name="Hunger"
      description="The stomach is happy."
      type="hunger"
      causeofdeathdescription="Starved"
      selfcauseofdeathdescription="You have died of starvation."
      limbspecific="false"
      indicatorlimb="Torso"
      hideiconafterdelay="true"
      activationthreshold="0"
      treatmentthreshold="20"
      iconcolors="0,180,0,255;180,0,0,255"
      showinhealthscannerthreshold="0"
      maxstrength="100"
      healableinmedicalclinic="false"
      MedicalSkillGain="0.0">
      <Description
        textidentifier="afflictiondescription.he-hunger.self"
        target="Self"
        minstrength="30"
        maxstrength="80" />
      <Description
        textidentifier="afflictiondescription.he-hunger.lethal.self"
        target="Self"
        minstrength="80"
        maxstrength="100" />
      <Description
        textidentifier="afflictiondescription.he-hunger.other.low"
        target="OtherCharacter"
        minstrength="0"
        maxstrength="30" />
      <Description
        textidentifier="afflictiondescription.he-hunger.other"
        target="OtherCharacter"
        minstrength="30"
        maxstrength="80" />
      <Description
        textidentifier="afflictiondescription.he-hunger.lethal.other"
        target="OtherCharacter"
        minstrength="80"
        maxstrength="100" />
      <!-- Convert he-hunger to hunger -->
      <Effect minstrength="0" maxstrength="100" strengthchange="0" 
        MinAfflictionOverlayAlphaMultiplier="0.0"
        MaxAfflictionOverlayAlphaMultiplier="0.0">
        <StatusEffect target="Character" >
          <Conditional he-hunger="gte 10" />
          <Affliction identifier="hunger" strength="10" />
          <ReduceAffliction identifier="he-hunger" strength="10" />
        </StatusEffect>
        <StatusEffect target="Character" >
          <Conditional he-hunger="gte 1" />
          <Conditional he-hunger="lt 10" />
          <Affliction identifier="hunger" strength="1" />
          <ReduceAffliction identifier="he-hunger" strength="1" />
        </StatusEffect>
        <StatusEffect target="Character" >
          <Conditional he-hunger="gt 0.0" />
          <Conditional he-hunger="lt 1" />
          <Affliction identifier="hunger" strength="0.1" />
          <ReduceAffliction identifier="he-hunger" strength="0.1" />
        </StatusEffect>
      </Effect>
      <icon texture="%ModDir:2954998725%/Content/UI/HE-IconsAtlas.png" sourcerect="0,128,128,128" origin="0,0" />
      <AfflictionOverlay texture="%ModDir:2954998725%/Content/UI/HungerOverlay.png" />
    </Affliction>
