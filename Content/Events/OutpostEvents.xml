<Randomevents>
  <!-- SCRIPTED EVENTS -->
  <EventPrefabs>
    <ScriptedEvent identifier="enablecafeteria">
      <WaitAction time="3" />
      <TagAction criteria="itemidentifier:op_cafeteriawindow" tag="cafeteria" SubmarineType="Outpost" />
      <StatusEffectAction targettag="cafeteria">
        <StatusEffect target="This" noninteractable="false" setvalue="true" />
      </StatusEffectAction>
    </ScriptedEvent>

    <ScriptedEvent identifier="he-hirechef">
      <TagAction criteria="jobidentifier:he-chef" team="team1" tag="playerchef" ContinueIfNoTargetsFound="true" />
      <!-- do not trigger the event if you already have a chef on your crew -->
      <CountTargetsAction targettag="playerchef" MinAmount="1" >
        <Success>
          <Goto name="end" />
        </Success>
      </CountTargetsAction>
      <SpawnAction npcsetidentifier="he-hirablenpcs" npcidentifier="regularchef" targettag="hirablechef" spawnlocation="Outpost" spawnpointtype="Path" targetmoduletags="crewmodule" />
      <TagAction criteria="player" tag="player" />
        <RNGAction chance="0.5">        
          <!--Free chef-->
          <Success>
            <Label name="restart_free" />
            <ClearTagAction tag="hc_player" />
            <WaitAction time="1" />
            <ConversationAction speakertag="hirablechef" invokertag="hc_player" text="eventtext.he-hirechef.freechef">
              <Option text="eventtext.he-hirechef.howmuch">
                <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.joinfree" waitforinteraction="false">
                  <Option text="eventtext.he-hirechef.welcome">
                    <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.chefhired" waitforinteraction="false"/>
                    <NPCChangeTeamAction npctag="hirablechef" teamtag="Team1" addtocrew="true" />
                    <GoTo name="end" />
                  </Option>
                  <Option text="eventtext.he-hirechef.thinkaboutit">
                    <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.changeyourmind" waitforinteraction="false"/>
                    <GoTo name="restart_free" />
                  </Option>
                </ConversationAction>
              </Option>
              <Option text="eventtext.he-hirechef.nothiring">
                <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.changeyourmind" waitforinteraction="false"/>
                <GoTo name="restart_free" />
              </Option>
              <Option text="eventtext.he-hirechef.nokitchen">
                <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.buykitchen" waitforinteraction="false"/>
                <GoTo name="restart_free" />
              </Option>
            </ConversationAction>
          </Success>          
          <!--Expensive chef-->
          <Failure>
            <Label name="restart_expensive" />
            <ClearTagAction tag="hc_player" />
            <WaitAction time="1" />
            <ConversationAction speakertag="hirablechef" invokertag="hc_player" text="eventtext.he-hirechef.expensivechef">
              <Option text="eventtext.he-hirechef.howmuch">
                <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.joinexpensive" waitforinteraction="false">
                  <Option text="eventtext.he-hirechef.welcome">
                    <CheckMoneyAction targettag="hc_player" amount="1250">
                      <Success>
                        <MoneyAction targettag="hc_player" amount="-1250" />
                        <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.chefhired" waitforinteraction="false"/>
                        <NPCChangeTeamAction npctag="hirablechef" teamtag="Team1" addtocrew="true" />
                        <GoTo name="end" />
                      </Success>
                      <Failure>
                        <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.nomoney" waitforinteraction="false"/>
                        <GoTo name="restart_expensive" />
                      </Failure>
                    </CheckMoneyAction>
                  </Option>
                  <Option text="eventtext.he-hirechef.thinkaboutit">
                    <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.changeyourmind" waitforinteraction="false"/>
                    <GoTo name="restart_expensive" />
                  </Option>
                </ConversationAction>
              </Option>
              <Option text="eventtext.he-hirechef.nothiring">
                <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.changeyourmind" waitforinteraction="false"/>
                <GoTo name="restart_expensive" />
              </Option>
              <Option text="eventtext.he-hirechef.nokitchen">
                <ConversationAction targettag="hc_player" text="eventtext.he-hirechef.buykitchen" waitforinteraction="false"/>
                <GoTo name="restart_expensive" />
              </Option>
            </ConversationAction>       
          </Failure>
        </RNGAction>
      <!--end the event-->
      <Label name="end" />
    </ScriptedEvent>    
    
     
    <!-- recover alien core mission -->
    <ScriptedEvent identifier="couwolaprizequest" commonness="20" >
      <CheckDataAction identifier="pickedcouwolasuitquest" condition="gt 0" >
        <Success>
          <Goto name="end" />
        </Success>
      </CheckDataAction>
      <TagAction criteria="player" tag="player" />
      <SpawnAction npcsetidentifier="outpostnpcs1" npcidentifier="miner" targettag="couwolanpc" spawnlocation="Outpost" targetmoduletags="crewmodule"/>
      <Label name="waitforinteraction" />
      <ClearTagAction tag="triggerer_player" />
      <TriggerAction target1tag="couwolanpc" target2tag="player" applytotarget2="triggerer_player" waitforinteraction="true" />
      <NPCWaitAction npctag="couwolanpc" wait="true" priority="50"  />
      <ConversationAction text="eventtext.couwolaprize.accostyou" targettag="triggerer_player" eventsprite="mechanic" >
        <Option text="EventText.generic.continue" >
          <ConversationAction text="eventtext.couwolaprize.luckywinner" targettag="triggerer_player" eventsprite="mechanic">
            <Option text="eventtext.couwolaprize.prizeyousay" >                
              <ConversationAction text="eventtext.couwolaprize.shitluck" targettag="triggerer_player" eventsprite="mechanic">              
                <Option text="EventText.generic.continue" >
                  <Label name="askformoney" />
                  <ConversationAction text="eventtext.couwolaprize.tiplocation" targettag="triggerer_player" eventsprite="mechanic">
                    <Option text="eventtext.couwolaprize.payup" >
                      <CheckMoneyAction Amount="300">
                        <Success>
                          <MoneyAction amount="-300" />
                          <ConversationAction text="eventtext.couwolaprize.gooddeal" targettag="triggerer_player" eventsprite="mechanic"  endconversation="true" />
                          <MissionAction missionidentifier="gotocouwolaraffle" locationtype="Abandoned" />
                          <SetDataAction identifier="pickedcouwolasuitquest" value="1" />
                          <Goto name="end" />
                        </Success>
                        <Failure>
                          <ConversationAction text="eventtext.couwolaprize.nomoney" targettag="triggerer_player" endconversation="true"/>
                          <Label name="payagain" />
                          <ClearTagAction tag="triggerer_player" />
                          <WaitAction time="3" />
                          <TriggerAction target1tag="couwolanpc" target2tag="player" applytotarget2="triggerer_player" waitforinteraction="true" />
                          <Goto name="askformoney" />
                        </Failure>
                      </CheckMoneyAction>
                    </Option>
                    <Option text="eventtext.generic.walkaway" endconversation="true" >
                      <Goto name="payagain" />
                    </Option>
                  </ConversationAction>
                </Option>
              </ConversationAction>
            </Option>    
           </ConversationAction>
          </Option>
        <Option text="eventtext.generic.ignore" endconversation="true" >
          <Goto name="waitforinteraction" />
        </Option>
      </ConversationAction>
      <Label name="end" />
    </ScriptedEvent> 
    
    <ScriptedEvent identifier="spawncouwolasuit" commonness="100">
      <CheckDataAction identifier="foundcowolasuit" condition="gt 0" >
        <Success>
          <Goto name="end" />
        </Success>
      </CheckDataAction>
      <TagAction criteria="player" tag="player" />
      <TagAction criteria="itemtag:abandonedstoragecab" submarinetype="outpost" tag="randomcabinet" chooserandom="true" />
      <SpawnAction itemidentifier="he-dirtycouwolaexosuit" targettag="couwolasuit" amount="1" spawnlocation="Outpost" spawnpointtag="randomcabinet" targetmoduletags="abandonedcrewmodule" offset="60" />
      <SpawnAction itemidentifier="he-colaradiantbottle" targettag="supercola" amount="5" spawnlocation="Outpost" targetinventory="randomcabinet" />
      <SpawnAction itemidentifier="he-colabottle" amount="2" spawnlocation="Outpost" targetinventory="randomcabinet" />
      <SpawnAction itemidentifier="he-colazerocan" amount="3" spawnlocation="Outpost" targetinventory="randomcabinet" />
      <TriggerAction target1tag="randomcabinet" target2tag="player" radius="250" waitforinteraction="false" />
      <SetDataAction identifier="foundcouwolasuit" value="1" />
      <Label name="retry" />
      <ClearTagAction tag="triggerer_player" />
      <WaitAction time="3" />
      <TriggerAction target1tag="couwolasuit" target2tag="player" applytotarget2="triggerer_player" waitforinteraction="true" />
      <ConversationAction text="eventtext.spawncouwolasuit.cleanthesuit" targettag="triggerer_player" eventsprite="note2" endconversation="true" dialogtype="small"/>
      <StatusEffectAction targettag="couwolasuit" >
        <StatusEffect target="This" invulnerabletodamage="false" setvalue="true" />
      </StatusEffectAction>
      <Goto name="retry" />
      <Label name="end" />
    </ScriptedEvent> 
    
    
    
    
    
    
